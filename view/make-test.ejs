    <!-- Live Preview -->
    <section class="bg-light py-5 px-2">
        <div class="container">
            <% if (locals.mergedArray.length > 0) { %>
                <% mergedArray.forEach((q, index)=> { %>
                    <div class="accordion accordion-flush" id="questions">
                        <div class="accordion-item">
                            <div class="question-desc d-flex gap-1">
                                <h2 class="accordion-header flex-fill">
                                    <%  %>
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#question-<%= index + 1 %>">
                                        <%= index + 1 %>.    <%= q.question %>
                                    </button>
                                </h2>
                                <!-- <button class="btn btn-sm btn-outline-danger"><i class="fa-solid fa-trash"></i></button> -->
                            </div>
                            <div id="question-<%= index + 1%>" class="accordion-collapse collapse" data-bs-parent="#questions">
                                <div class="accordion-body">
                                    <li><%= q.options[0] %></li>
                                    <li><%= q.options[1] %></li>
                                    <li><%= q.options[2] %></li>
                                    <li><%= q.options[3] %></li>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } %>
