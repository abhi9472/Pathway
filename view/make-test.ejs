    <section class="bg-light py-5 px-2">
        <div class=" container h-100 p-2">
            <form action="/addQuestion" method="post">
                <div class="question-input-box d-md-flex gap-md-1">
                    <div class="form-floating flex-fill my-md-0 my-1">
                        <textarea name="question" class="form-control h-100" placeholder="Enter your question here"
                            id="floatingTextarea2"></textarea>
                        <label for="floatingTextarea2" class="fw-lighter">Question :</label>
                    </div>
                    <div class="options-input-box d-flex flex-column gap-1">
